{
  "name": "punto-venta",
  "private": true,
  "workspaces": [
    "client",
    "api",
    "blockchain"
  ],
  "scripts": {
    "dev:api": "npm --workspace api run dev",
    "dev:client": "npm --workspace client run dev",
    "dev:blockchain": "npm --workspace blockchain run dev",
    "dev": "concurrently \"npm run dev:blockchain\" \"npm run dev:api\" \"npm run dev:client\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
